        }else{
            var num=parseInt(n)+parseInt(add_num);
            $("#num").val(num); 
        }
      }
    });
    $("#jian").click(function(){
      var n=$("#num").val(); //初始值

      if(n==min_num){
        alert("亲最小值了！")
        $("#num").val(min_num);
      }else{
        if(add_num<=0){
            var num=parseInt(n)-1;
            if(num==0){alert("不能为0!"); return}
            $("#num").val(num);
        }else{
            var num=parseInt(n)-parseInt(add_num);
